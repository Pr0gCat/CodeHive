#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Run pre-commit checks
echo "ğŸ” Running pre-commit checks..."

# Type checking
echo "ğŸ“ Type checking..."
bun run type-check
if [ $? -ne 0 ]; then
  echo "âŒ Type checking failed. Please fix TypeScript errors."
  exit 1
fi

# Linting
echo "ğŸ¨ Linting..."
bun run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed. Run 'bun run lint:fix' to fix issues."
  exit 1
fi

# Unit tests
echo "ğŸ§ª Running unit tests..."
bun run test:unit
if [ $? -ne 0 ]; then
  echo "âŒ Unit tests failed. Please fix the failing tests."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"